        <attr name="vertical_interval" format="dimension"/>
        <attr name="horizontal_interval" format="dimension"/>
        <attr name="gravity" format="enum">
            <enum name="left" value="3" />
            <enum name="center" value="17" />
            <enum name="right" value="5" />
        </attr>

        <attr name="tag_text_size" format="dimension"/>
        <attr name="tag_padding" format="dimension"/>
        <attr name="tag_background_color" format="color"/>
        <attr name="tag_background_color_selected" format="color"/>
        <attr name="tag_border_color" format="color"/>
        <attr name="tag_border_color_selected" format="color"/>
        <attr name="tag_border_width" format="dimension"/>
        <attr name="tag_border_radious" format="dimension"/>
        <attr name="tag_textcolor" format="color"/>
        <attr name="tag_textcolor_selected" format="color"/>
    </declare-styleable>
</resources>